{
    "manifest_version": 2,
    "name": "Emoter",
    "version": "0.2",

    "description": "Extension for custom emotes.",
    "homepage_url": "https://github.com/syanth",
    "icons": {
        "48": "icons/icon-48.png"
    },

    "browser_specific_settings": {
        "gecko": {
          "id": "emoter@syanth"
        }
    },

    "permissions": [
        "activeTab",
        "clipboardRead",
        "clipboardWrite",
        "storage"
    ],

    "browser_action": {
        "default_icon": "icons/icon-32.png",
        "default_title": "Emoter",
        "default_popup": "popup/choose_emote.html"
    },

    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "linux": "Ctrl+Shift+U"
            }
        }
    }
}